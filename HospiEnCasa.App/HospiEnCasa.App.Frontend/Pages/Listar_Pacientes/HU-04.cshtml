@page
@model HospiEnCasa.App.Frontend.HU_04Model
@{
}
<h1>Listado de Pacientes Hospitalizados en casa </h1>
<table>
    @foreach (var paciente in Model.Pacientes)
    {
        <tr>
            <td>
                @paciente.DocumentoIdentidad
            </td>
            <td>
                @paciente.Nombre
            </td>
            <td>
                @paciente.Apellidos
            </td>
             <td>
                <a asp-page="./EditarPaciente" asp-route-pacienteId="@paciente.Id">
                    Editar Paciente
                </a>
            </td>
        </tr>

    }
</table>
<a asp-page="..\Registrar_Paciente\HU-01">Adicionar Paciente</a>